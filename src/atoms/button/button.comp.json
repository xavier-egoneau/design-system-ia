{
  "name": "Button",
  "type": "atom",
  "variables": {
    "variant": {
      "type": "string",
      "enum": ["primary", "secondary"],
      "default": "primary"
    },
    "size": {
      "type": "string", 
      "enum": ["sm", "md", "lg"],
      "default": "md"
    },
    "disabled": {
      "type": "boolean",
      "default": false
    },
    "text": {
      "type": "string",
      "default": "Button"
    }
  },
  "twig": "button.twig",
  "scss": "_button.scss",
  "tokensUsed": ["color.primary", "spacing.md", "radius"],
  "variants": [
    {
      "name": "Primary",
      "props": { "variant": "primary", "text": "Primary Button" }
    },
    {
      "name": "Secondary", 
      "props": { "variant": "secondary", "text": "Secondary Button" }
    },
    {
      "name": "Large Primary",
      "props": { "variant": "primary", "size": "lg", "text": "Large Button" }
    },
    {
      "name": "Small Secondary",
      "props": { "variant": "secondary", "size": "sm", "text": "Small Button" }
    },
    {
      "name": "Disabled",
      "props": { "variant": "primary", "disabled": true, "text": "Disabled Button" }
    }
  ]
}